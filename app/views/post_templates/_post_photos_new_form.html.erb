<!-- Form photo start -->
<form action="/create_photo" method="post" enctype="multipart/form-data">
<!-- Form photo end -->

  <!-- Label and input for post_id start -->
  <!-- Input for post_id start -->
  <input type="hidden" name="post_id" value="<%= @post.id %>">
  <!-- Input for post_id end -->

  <!-- Label and input for image start -->
  <div class="form-group">
    <label for="image">
      Image
    </label>

    <!-- Input for image start -->
    <input type="file" id="image" name="image" class="form-control">
    <!-- Input for image end -->
  </div>
  <!-- Label and input for image end -->

  <button class="btn btn-block btn-outline-secondary">
    Create photo
  </button>
</form>
