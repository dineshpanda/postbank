<h1>
  Edit photo #<%= @photo.id %>
</h1>

<hr>

<!-- Form photo start -->
<form action="/update_photo/<%= @photo.id %>" method="post" enctype="multipart/form-data">
<!-- Form photo end -->

  <!-- Label and input for post_id start -->
  <div class="form-group">
    <label for="post_id">
      Post
    </label>

    <!-- Input for post_id start -->
    <%= select_tag(:post_id, options_from_collection_for_select(Post.all, :id, :title, @photo.post_id), :class => "form-control") %>
    <!-- Input for post_id end -->
  </div>
  <!-- Label and input for post_id end -->

  <!-- Label and input for image start -->
  <div class="form-group">
    <label for="image">
      Image
    </label>

    <!-- Input for image start -->
    <%= cl_image_tag(@photo.image.to_s, :width => 90, :height => 90, :crop => :thumb) %>
    <input type="file" id="image" name="image" class="form-control">
    <!-- Input for image end -->
  </div>
  <!-- Label and input for image end -->

  <button class="btn btn-block btn-outline-secondary">
    Update photo
  </button>
</form>

<hr>

<a href="/photos">
  Go back
</a>
