<!-- Validation failure messages -->
<% if @photo.present? %>
  <% if @photo.errors.any? %>
    <% @photo.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new photo
</h1>


<hr>

<!-- Form photo start -->
<form action="/create_photo" method="post" enctype="multipart/form-data">
<!-- Form photo end -->

  <!-- Label and input for post_id start -->
  <div class="form-group">
    <label for="post_id">
      Post
    </label>

    <!-- Input for post_id start -->
    <%= select_tag(:post_id, options_from_collection_for_select(Post.all, :id, :title, @photo.post_id), :class => "form-control") %>
    <!-- Input for post_id end -->
  </div>
  <!-- Label and input for post_id end -->

  <!-- Label and input for image start -->
  <div class="form-group">
    <label for="image">
      Image
    </label>

    <!-- Input for image start -->
    <input type="file" id="image" name="image" class="form-control">
    <!-- Input for image end -->
  </div>
  <!-- Label and input for image end -->

  <button class="btn btn-block btn-outline-secondary">
    Create photo
  </button>
</form>

<hr>

<a href="/photos">
  Go back
</a>
